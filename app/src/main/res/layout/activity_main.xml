<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#2C3333"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/tiny_icon"
            android:foreground="@drawable/ripple"
            android:longClickable="true"
            android:text="Expense Tracker"
            android:textAlignment="center"
            android:textColor="#F6F6F6"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text=" Help?"
            android:textColor="#AE944B"
            android:clickable="true"
            />


    </LinearLayout>

    <Spinner
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textAlignment="center"
        android:textColor="#CBE4DE"
        android:textSize="20sp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:background="#2E4F4F"
        android:entries="@array/Categories_Filter"
        android:tooltipText="Select a Category to apply filter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:id="@+id/datesorter"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:text="Date ↑"
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="10dp"
            android:id="@+id/reasonsorter"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:text="Reason ↑"
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="10dp"
            android:id="@+id/categorysorter"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:text="Category ↑"
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="10dp"
            android:id="@+id/amountsorter"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:text="Amount ↑"
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="none"
        android:layout_weight="1"
        android:fillViewport="true"
        >

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expensetable"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </TableRow>




    </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="Total : "
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textColor="#CBE4DE"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/cell"
            />



        <TextView
            android:id="@+id/totalamt"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="@drawable/cell"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:backgroundTint="#007806"
            android:onClick="new_expense"
            android:text="Add  Expense ➕"
            android:textSize="12sp"
            app:rippleColor="#6796BC" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            ></Space>

        <Button
            android:id="@+id/clearall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:backgroundTint="#9F0909"
            android:text="Clear Table 🗑️"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/grapher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0E8287"
        android:onClick="graphme"
        android:text="Visualize Expense 📊" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/read"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:onClick="file_picker"
            android:backgroundTint="#788780"
            android:text="Read CSV 🗄️" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            ></Space>


        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:onClick="csv_maker"
            android:backgroundTint="#788780"
            android:text="Save as CSV 💾" />

    </LinearLayout>



</LinearLayout>