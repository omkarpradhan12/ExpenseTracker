<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    >

    <TextView
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:text="Select Date for CSV"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select From Date :"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/datePickerfrom"
        style="@android:style/Widget.Material.DatePicker"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_above="@+id/amount"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"

        android:theme="@style/MyDatePicker" />


    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select to Date :"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/datePickerto"
        style="@android:style/Widget.Material.DatePicker"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_above="@+id/amount"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:theme="@style/MyDatePicker" />




</LinearLayout>