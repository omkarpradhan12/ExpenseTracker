<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#6DEDAB"
    >


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey There !"
        android:background="#345E48"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a rough prediction of further expenses\nfor given month based on supplied data."
        android:textAlignment="center"
        android:textColor="#1C1C1C"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pred_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prediction for month : "
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pred_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1C1C1C"
        android:text="Value"
        android:textAlignment="viewStart" />
</LinearLayout>