<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">#D2FFFB</item>
        <!-- Divider color -->
        <item name="colorControlNormal">#5BC7FA</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize text appearance -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Customize background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Customize status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="alertDialogTheme">@style/DarkAlertDialogTheme</item>




    </style>

    <style name="DarkAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="buttonBarStyle">@style/MyAlertDialogBottomBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="MyAlertDialogBottomBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <!-- Customize the properties of the bottom bar style here -->
        <item name="android:background">#293839</item> <!-- Change the background color -->
        <item name="android:gravity">center</item> <!-- Change the gravity -->
        <!-- Add more customizations as needed -->
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_text_color_primary</item>
        <item name="android:background">@color/dark_background_color</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F83E3E</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#37DA2B</item>
        <item name="android:layout_gravity">end</item>
    </style>


    <style name="Add_Button" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#008c13</item>
    </style>

<style name="Clear_Button" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#9f0909</item>
    </style>

<style name="Visualize_Expense" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#085054</item>
    </style>

<style name="Read_Write_CSV" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#788780</item>
    </style>







    <style name="PopupMenuStyle1" parent="@style/Widget.MaterialComponents.PopupMenu">
        <!-- Customize the menu popup color -->
        <item name="android:popupBackground">#2e4f4f</item>
        <item name="android:itemBackground">#2e4f4f</item>
        <item name="android:panelFullBackground">#2e4f4f</item>
        <item name="android:backgroundTint">#2e4f4f</item>
        <!-- Replace with your desired color -->
    </style>


    <style name="PopupMenuStyle2" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">#0e8388</item>
    </style>



    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Text appearance -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

        <!-- Background -->
        <item name="android:background">#fff000</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minHeight">36dp</item>

        <!-- Ripple effect -->
        <item name="android:foreground">@drawable/ripple</item>

        <!-- Custom colors -->
        <item name="chipBackgroundColor">#ff0000</item>
    </style>

    <style name="cutfab">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>



</resources>