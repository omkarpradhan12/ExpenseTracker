<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">#D2FFFB</item>
        <!-- Divider color -->
        <item name="colorControlNormal">#5BC7FA</item>
        <item name="android:textColorPrimaryInverse">#000</item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">#000</item> <!-- header year color -->

    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize text appearance -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Customize background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Customize status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="alertDialogTheme">@style/DarkAlertDialogTheme</item>


    </style>


    <style name="DarkAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="buttonBarStyle">@style/MyAlertDialogBottomBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="MyAlertDialogBottomBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <!-- Customize the properties of the bottom bar style here -->
        <item name="android:background">#B0293839</item> <!-- Change the background color -->
        <item name="android:gravity">center</item> <!-- Change the gravity -->
        <!-- Add more customizations as needed -->
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_text_color_primary</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F83E3E</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#37DA2B</item>
        <item name="android:layout_gravity">end</item>
    </style>


    <style name="PopupMenuStyle1" parent="@style/Widget.MaterialComponents.PopupMenu">
        <!-- Customize the menu popup color -->
        <item name="android:popupBackground">#2e4f4f</item>
        <item name="android:itemBackground">#2e4f4f</item>
        <item name="android:panelFullBackground">#2e4f4f</item>
        <item name="android:backgroundTint">#2e4f4f</item>
        <!-- Replace with your desired color -->
    </style>


    <style name="PopupMenuStyle2" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:backgroundTint">#0e8388</item>
    </style>


    <!-- Custom DateRangePicker theme -->
    <style name="DateRangePicker_Custom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="colorPrimary">#0e8388</item> <!-- Header bg/Selection Handle  -->
        <item name="colorOnPrimary">#DDD4D4</item> <!-- Header text color / Selected Text color -->


        <item name="colorOnSurface">#DDD4D4</item> <!-- Calender text -->
        <item name="colorSurface">#325355</item>  <!-- Calender bg -->

        <item name="buttonBarNegativeButtonStyle">@style/TextButtoncancel</item>

        <item name="materialCalendarStyle">@style/MyMaterialCalendar</item>

    </style>


    <style name="TextButtoncancel" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#F38181</item>
        <item name="backgroundTint">#00FFFFFF</item>
    </style>


    <style name="MyMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="rangeFillColor">@color/range_fill</item>

    </style>




    <style name="WidgetContainer" parent="AppTheme.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="android:background">#3C484C</item>
        <item name="appWidgetPadding">10dp</item>
        <item name="android:textColor">#D5D5D5</item>
    </style>



</resources>