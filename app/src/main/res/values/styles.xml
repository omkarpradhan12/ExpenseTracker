<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">#D2FFFB</item>
        <!-- Divider color -->
        <item name="colorControlNormal">#5BC7FA</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize text appearance -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Customize background -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Customize status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="alertDialogTheme">@style/DarkAlertDialogTheme</item>

    </style>

    <style name="DarkAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dark_background_color</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_text_color_primary</item>
        <item name="android:background">@color/dark_background_color</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#F83E3E</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#37DA2B</item>
    </style>


    <style name="Add_Button" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#008c13</item>
    </style>

<style name="Clear_Button" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#9f0909</item>
    </style>

<style name="Visualize_Expense" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#085054</item>
    </style>

<style name="Read_Write_CSV" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">#788780</item>
    </style>

</resources>